<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="Add Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_add_event"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp" android:layout_marginEnd="25dp"
            android:backgroundTint="@color/design_default_color_secondary_variant"/>
    <EditText
            android:hint="Name"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:hint="Town + Zip Code"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etZipTown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/etName"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:hint="Address"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/etZipTown"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:hint="Phone number"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/etAddress"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>

    <EditText
            android:hint="Reply to (email)"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etReply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/etPhone"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>

    <EditText
            android:hint="Comments"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etComments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/etReply"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>

    <EditText
            android:hint="Email - Address"
            android:layout_width="340dp"
            android:layout_height="50dp" android:id="@+id/etEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/etComments"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.492"/>



</androidx.constraintlayout.widget.ConstraintLayout>